@page
@model Book_list.Pages.BookPages.MainIndexModel
@{
}



<div class="container p-0 m-0">
    <div class="row">
        <div class="col-lg-9">
            <h1>BookList</h1>
        </div>
        <div class="col-lg-3">
            <a asp-page="create" class="btn btn-info form-control text-white"> Create New Book</a>
        </div>

    </div>
    <div class="row">
        <div class="col-12">
            <form method="post">
                @if (Model.BookInMainIndex.Count() > 0)
                {
                    <table class="table table-striped table-bordered">
                        <tr class="table-secondary">
                            <th>
                                <label asp-for="BookInMainIndex.FirstOrDefault().Name"></label>
                            </th>
                            <th>
                                <label asp-for="BookInMainIndex.FirstOrDefault().Author"></label>
                            </th>
                            <th>
                                <label asp-for="BookInMainIndex.FirstOrDefault().ISBN"></label>
                            </th>
                            <th>
                                <label>Customize</label>
                            </th>
                        </tr>
                        @foreach (var item in Model.BookInMainIndex)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(m => item.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(m => item.Author)
                                </td>
                                <td>
                                    @Html.DisplayFor(m => item.ISBN)
                                </td>
                                <td>
                                    <button asp-route-id="@item.Id" asp-page-handler="Delete" onclick=" return confirm('Are you sure want to delete?') " class="btn btn-danger btn-sm"> Delete</button>
                                    <a asp-page="/BookPages/Edit" asp-route-id="@item.Id" class="btn btn-success btn-sm">Edit</a>
                                </td>
                            </tr>
                        }
                    </table>


                }
                else
                {
                    <div class="border p-3 m-3">
                        <h2>No Books Available</h2>
                    </div>

                }
            </form>

        </div>
    </div>

    <br />

    <div class="col-12 text-center">
        <h2>JavaScript View</h2>
    </div>

    <br />

    <div class="col-12 border p-3">
        <table id="DT_load" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Author</th>
                    <th>ISBN</th>
                    <th></th>

                </tr>
            </thead>
        </table>
    </div>
</div>

@section Scripts{
    <script src="~/js/booklist.js"></script>
}
